# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 140

# Golang files
[*.go]
indent_style = tab
indent_size = 4
charset = utf-8

# YAML files
[{*.yaml,*.yml}]
indent_style = space
indent_size = 2
charset = utf-8

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4
charset = utf-8

# Markdown files
[*.md]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4
charset = utf-8

# Makefiles
[Makefile]
indent_style = tab
charset = utf-8